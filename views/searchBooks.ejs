<%- include("partials/header.ejs") %>

<section class="px-4 py-8 md:py-12 lg:py-16 bg-gray-100">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-semibold text-center mb-6">
      Search for Books
    </h2>
    <form
      class="flex flex-col md:flex-row items-center justify-center space-y-4 md:space-y-0 md:space-x-4"
      action="/search-books"
      method="POST"
    >
      <input
        type="text"
        class="w-full md:w-2/3 p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Enter book name or author"
        name="searchText"
      />
      <button
        type="submit"
        class="w-full md:w-auto px-6 py-3 bg-blue-500 text-white font-semibold rounded-md shadow-md hover:bg-blue-600 transition duration-300"
      >
        Search
      </button>
    </form>
  </div>
</section>

<% if (locals.books) { %>

<section class="px-4 py-8 md:py-12 lg:py-16">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-semibold text-center mb-6">
      Search Results
    </h2>

    <% if (locals.books && books.length > 0) { %>
    <div class="space-y-6">
      <% books.forEach(function(book) { %>
      <div class="bg-white shadow-md rounded-md overflow-hidden p-4">
        <div class="flex items-start space-x-4">
          <img
            src="<%= book?.thumbnail %>"
            alt="<%= book.title %> thumbnail"
            class="w-24 h-auto rounded"
          />
          <div class="flex-1">
            <h3 class="text-lg font-bold text-gray-800"><%= book.title %></h3>
            <p class="text-sm text-gray-600 mb-2">
              By: <%= book.author ? book.author.join(', ') : 'Author not available' %>
            </p>
            <p class="text-gray-700 text-sm">
              <%= book.description ? book.description : 'No description available.' %>
            </p>
            <form action="/write-note" method="POST">
              <input class="hidden" name="bookId" value="<%= book.id %>" type="text">
              <button
              class="mt-4 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300"
              type="submit"
              >
                Select
              </button>
            </form>
            
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <% } else { %>
    <p class="text-center text-gray-500">No books found. Please try again.</p>
    <% } %>
  </div>
</section>

<% } %> <%- include("partials/footer.ejs") %>
